<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--  Received message text view  -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/receiver_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/message_image_size"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginVertical="@dimen/margin_tiny"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="@dimen/text_view_padding_horizontal"
        android:paddingVertical="@dimen/text_view_padding_vertical"
        android:text="@string/placeholder_receiver_message"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:background="@drawable/message_their_style"
        android:visibility="gone"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/receiver_time_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginVertical="@dimen/margin_tiny"
        android:layout_alignParentStart="true"
        android:layout_below="@id/receiver_message_textView"
        android:text="@string/placeholder_receiver_message"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:visibility="gone"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/receiver_message_textView_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/receiver_message_textView"
        android:layout_alignBottom="@id/receiver_message_textView"
        android:src="@drawable/ic_check_24"
        android:contentDescription="@string/content_text_seen"
        android:visibility="gone" />

    <!--  Received message image view  -->
    <ImageView
        android:id="@+id/receiver_message_imageView"
        android:layout_width="@dimen/message_image_size"
        android:layout_height="@dimen/message_image_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/image_view_padding"
        android:background="@color/their_message_background_color"
        android:src="@drawable/ic_image_256"
        android:visibility="gone"
        android:contentDescription="@string/content_text_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/receiver_time_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginVertical="@dimen/margin_tiny"
        android:layout_alignParentStart="true"
        android:layout_below="@id/receiver_message_imageView"
        android:text="@string/placeholder_receiver_message"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:visibility="gone"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/receiver_message_imageView_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/receiver_message_imageView"
        android:layout_alignBottom="@id/receiver_message_imageView"
        android:src="@drawable/ic_check_24"
        android:contentDescription="@string/content_text_seen"
        android:visibility="gone" />

</RelativeLayout>